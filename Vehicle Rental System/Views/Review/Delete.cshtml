@model Vehicle_Rental_System.Model.Review

@{
    ViewBag.Title = "Delete Review";
}

<h2>Delete Review</h2>
<hr />
<h3>Are you sure you want to delete this?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">Review ID</dt>
    <dd class="col-sm-10">@Model.ReviewId</dd>

    <dt class="col-sm-2">Message</dt>
    <dd class="col-sm-10">@Model.Message</dd>

    <dt class="col-sm-2">Reservation ID</dt>
    <dd class="col-sm-10">@Model.ReservationId</dd>

    <dt class="col-sm-2">Review Date</dt>
    <dd class="col-sm-10">@Model.ReviewDate</dd>
</dl>
<hr />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
