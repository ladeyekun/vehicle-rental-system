@model Vehicle_Rental_System.Model.Review

@{
    ViewBag.Title = "Edit Review";
}

<h2>Edit Review</h2>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReviewId" />

    <div class="form-group mb-3">
        <label asp-for="Message" class="form-label"></label>
        <input asp-for="Message" class="form-control" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ReservationId" class="form-label"></label>
        <input asp-for="ReservationId" class="form-control" />
        <span asp-validation-for="ReservationId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
