@model Vehicle_Rental_System.Model.Location

@{
    ViewBag.Title = "Delete Location";
}

<h2>Delete Location</h2>
<hr />
<h3>Are you sure you want to delete this location?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">Location ID</dt>
    <dd class="col-sm-10">@Model.LocationId</dd>
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
</dl>
<hr />
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="LocationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
