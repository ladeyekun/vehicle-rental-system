@using Vehicle_Rental_System.Model
@model IEnumerable<History>

<h2>Rental History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Vehicle ID</th>
            <th>Customer ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (History rentalHistory in Model)
        {
            <tr>
                <td>@rentalHistory.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@rentalHistory.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@rentalHistory.CustomerId</td>
                <td>@rentalHistory.VehicleId</td>
                <td class="flex">
                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = @rentalHistory.RentalHistoryId })">Edit</a>
                    <a class="btn btn-secondary" href="@Url.Action("Details", new { id = @rentalHistory.RentalHistoryId })">Details</a>

                    <!-- Delete Form -->
                    <form asp-action="Delete" asp-route-id="@rentalHistory.RentalHistoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Create")">Create New History</a>