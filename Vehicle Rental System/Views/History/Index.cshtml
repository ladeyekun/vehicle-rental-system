@using Vehicle_Rental_System.Model
@model IEnumerable<History>

<h2>Rental History</h2>

<p>
    <button type="button" onclick="location.href='/History/Create'">Create New History</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Vehicle ID</th>
            <th>Customer ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (History rentalHistory in Model)
        {
            <tr>
                <td>@rentalHistory.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@rentalHistory.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@rentalHistory.CustomerId</td>
                <td>@rentalHistory.VehicleId</td>
                <td>
                    <!-- Details Button -->
                    <button type="button" onclick="location.href='/History/Details/@rentalHistory.RentalHistoryId'">Details</button>

                    <!-- Edit Link -->
                    <a asp-action="Edit" asp-route-id="@rentalHistory.RentalHistoryId">Edit</a>

                    <!-- Delete Form -->
                    <form asp-action="Delete" asp-route-id="@rentalHistory.RentalHistoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

