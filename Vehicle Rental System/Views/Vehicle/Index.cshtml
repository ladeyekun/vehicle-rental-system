@using Vehicle_Rental_System.Model
@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Vehicle Index";
}

<h1>Vehicle List</h1>

<!-- Add a button to create a new vehicle -->
<p>
    <a href="@Url.Action("Create", "Vehicle")" class="btn btn-success">Create New Vehicle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Type</th>
            <th>Rental Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.RentalPrice.ToString("C")</td>
                <td>@vehicle.VehicleAvailabilityStatus</td>
                <td>
                    <a href="@Url.Action("Details", "Vehicle", new { id = vehicle.VehicleId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Vehicle", new { id = vehicle.VehicleId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Vehicle", new { id = vehicle.VehicleId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
