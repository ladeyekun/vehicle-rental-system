@model Vehicle_Rental_System.Model.Vehicle

@{
    ViewBag.Title = "Vehicle Details";
}

<h1>@Model.Brand @Model.Model</h1>

<div>
    <h3>Vehicle Information</h3>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Rental Price</dt>
        <dd class="col-sm-10">@Model.RentalPrice</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.VehicleAvailabilityStatus</dd>

        <dt class="col-sm-2">Mileage</dt>
        <dd class="col-sm-10">@Model.Mileage</dd>

        <dt class="col-sm-2">Location ID</dt>
        <dd class="col-sm-10">@Model.LocationId</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.VehicleId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.VehicleId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
