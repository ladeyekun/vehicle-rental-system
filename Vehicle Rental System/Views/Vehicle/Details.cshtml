@using Vehicle_Rental_System.Model
@model Vehicle

@{
    ViewData["Title"] = "Vehicle Details";
}

<h2>Vehicle Details</h2>

<hr />

<dl class="row">
    <dt class="col-sm-3">Brand</dt>
    <dd class="col-sm-9">@Model.Brand</dd>

    <dt class="col-sm-3">Model</dt>
    <dd class="col-sm-9">@Model.Model</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@Model.Type</dd>

    <dt class="col-sm-3">Rental Price</dt>
    <dd class="col-sm-9">@Model.RentalPrice.ToString("C")</dd>

    <dt class="col-sm-3">Mileage</dt>
    <dd class="col-sm-9">@Model.Mileage</dd>

    <dt class="col-sm-3">Availability Status</dt>
    <dd class="col-sm-9">@Model.VehicleAvailabilityStatus</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Location?.Name</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.VehicleId" class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.VehicleId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>