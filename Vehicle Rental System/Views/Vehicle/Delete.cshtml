@model Vehicle_Rental_System.Model.Vehicle

<h1>Delete Vehicle</h1>

<h3>Are you sure you want to delete this vehicle?</h3>

<div>
    <h4>@Model.Brand @Model.Model</h4>
    <p>Type: @Model.Type</p>
    <p>Rental Price: @Model.RentalPrice</p>
    <p>Status: @Model.VehicleAvailabilityStatus</p>
    <p>Mileage: @Model.Mileage</p>
    <p>Location ID: @Model.LocationId</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VehicleId" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

 

